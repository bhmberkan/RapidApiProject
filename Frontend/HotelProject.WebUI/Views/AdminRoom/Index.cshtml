@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>   
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@x.RoomNumber</td>
            <td>@x.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@x.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@x.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            
        </tr>

    }
</table>

<a href="/AdminRoom/AddRoom" class="btn mb-1 btn-outline-info">Yeni oda Girişi</a>
